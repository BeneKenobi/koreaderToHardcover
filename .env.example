# Hardcover API Token
HARDCOVER_BEARER_TOKEN=your_token_here

# WebDAV Settings (KOReader Sync)
WEBDAV_URL=https://cloud.example.com/remote.php/dav/files/user/Books/statistics.sqlite3
WEBDAV_USERNAME=your_webdav_user
WEBDAV_PASSWORD=your_webdav_password

# Web Dashboard Settings
APP_USERNAME=admin
APP_PASSWORD=admin
SYNC_INTERVAL_MINUTES=60

# Optional/Advanced Settings
# Path to KOReader DB file on WebDAV (folder)
WEBDAV_PATH=/remote.php/dav/files/user/Books
# Filename for KOReader DB (default: statistics.sqlite3)
KOREADER_DB_PATH=statistics.sqlite3
# Log file path for web dashboard
LOG_PATH=app.log
# DuckDB database file path
DB_PATH=reading_stats.duckdb
# Secret key for session middleware (web dashboard)
SECRET_KEY=your_secret_key_here
